{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "nodenext",
        "moduleDetection": "force",
        "target": "es2022",

        // other best practice configs
        "moduleResolution": "nodenext",
        "noImplicitAny": false,
        "removeComments": false,
        "composite": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "isolatedModules": false,
        "declaration": true
    },
    "exclude": [
      "node_modules",
      ".idea",
      "dist",
      "typings",
      "test"
    ]
}
